<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.rydrotin">

    <application
        android:name="com.project.rydrotin.HabitsApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.RydRotin"
        tools:targetApi="31">
        <activity
            android:name="com.project.rydrotin.ui.mood.MoodActivity"
            android:exported="false"
            android:label="Mood"
            android:parentActivityName="com.project.rydrotin.ui.home.HomeActivity"/>
        <activity
            android:name="com.project.rydrotin.ui.history.HistoryActivity"
            android:exported="false"
            android:label="History"
            android:parentActivityName="com.project.rydrotin.ui.home.HomeActivity"/>
        <activity
            android:name=".ui.login.Login"
            android:exported="false"
            android:theme="@style/Theme.RydRotin.NoActionBar"/>
        <activity
            android:name=".ui.login.Registration"
            android:exported="false"
            android:theme="@style/Theme.RydRotin.NoActionBar"/>
        <activity
            android:name="com.project.rydrotin.ui.habits.HabitsActivity"
            android:exported="false"
            android:label="Habits"
            android:parentActivityName="com.project.rydrotin.ui.home.HomeActivity"/>
        <activity
            android:name="com.project.rydrotin.ui.home.HomeActivity"
            android:exported="false"/>
        <activity
            android:name="com.project.rydrotin.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.RydRotin.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>